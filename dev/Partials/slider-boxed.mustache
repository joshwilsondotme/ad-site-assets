<div id="main-banner">
  <h2 class="h-outline">Banner</h2>
  <div class="row">
    <div class="large-12 columns">
      <div id="slider-boxed-wrap">
        <div id="slider-boxed" class="cycle-slideshow"
          data-cycle-slides=".slide"
          data-cycle-timeout="10000"
          data-cycle-prev="#prev"
          data-cycle-next="#next"
          data-cycle-pager="#slide-pager"
          data-cycle-auto-height=container
          data-cycle-swipe=true
          data-cycle-swipe-fx=scrollHorz
          data-cycle-pager-template="<a href=#>{{slideNum}}</a>">

          <div id="slide-controls-container">
            <a href="#" id="prev" class="slider-controls"><i class="fa fa-chevron-left"></i></a>
            <a href="#" id="next"  class="slider-controls"><i class="fa fa-chevron-right"></i></a>
          </div>

          <div class="slide slide1">
            <img src="{{{cdn.projects}}}projects/hearingcarepro.com/images/banner-1.jpg" alt="">
            <div class="slide-content">
              <div class="slide-column">{{{fragment.alt-slide-1a}}}</div>
              <div class="slide-column">{{{fragment.alt-slide-1b}}}</div>
            </div>
          </div>
          <div class="slide slide3">
            <img src="{{{cdn.projects}}}projects/hearingcarepro.com/images/banner-3.jpg" alt="">
            <div class="slide-content">
              <div class="slide-column">{{{fragment.alt-slide-2a}}}</div>
              <div class="slide-column">{{{fragment.alt-slide-2b}}}</div>
            </div>
          </div>
          <div class="slide slide4">
            <img src="{{{cdn.projects}}}projects/hearingcarepro.com/images/banner4-1.jpg" alt="">
            <div class="slide-content">
              <div class="slide-column">{{{fragment.alt-slide-3a}}}</div>
              <div class="slide-column">{{{fragment.alt-slide-3b}}}</div>
            </div>
          </div>
        </div>
        <div id="slide-pager"></div>
      </div>
    </div>
  </div>
</div>
